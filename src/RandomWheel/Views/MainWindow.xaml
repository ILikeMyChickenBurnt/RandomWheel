<Window x:Class="RandomWheel.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomWheel.Views"
        xmlns:vm="clr-namespace:RandomWheel.ViewModels"
        mc:Ignorable="d"
        Title="RandomWheel" Height="900" Width="1200"
        MinHeight="750" MinWidth="900"
        Background="{StaticResource BackgroundBrush}"
        Foreground="{StaticResource TextPrimaryBrush}"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    
    <Grid>
        <!-- Main Content -->
        <DockPanel LastChildFill="True">
            <!-- Top Bar: List Management -->
            <Border DockPanel.Dock="Top" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left: List selector and management -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="List:" VerticalAlignment="Center" Style="{StaticResource TitleStyle}" Margin="0,0,8,0" />
                        <ComboBox x:Name="ListComboBox" Width="200" ItemsSource="{Binding Lists}" DisplayMemberPath="Name" SelectedItem="{Binding CurrentList}" VerticalAlignment="Center" />
                        <Button x:Name="RenameButton" Content="Rename" Click="RenameList_Click" Style="{StaticResource ModernButtonStyle}" Margin="8,0,0,0" />
                        <Button x:Name="NewListButton" Content="New" Command="{Binding NewListCommand}" Style="{StaticResource ModernButtonStyle}" Margin="8,0,0,0" />
                        <Button x:Name="DeleteButton" Content="Delete" Click="DeleteList_Click" Style="{StaticResource ModernButtonStyle}" Margin="8,0,0,0" />
                    </StackPanel>
                    
                    <!-- Right: Menu button for file operations -->
                    <Button x:Name="OptionsButton" Grid.Column="2" 
                            Style="{StaticResource ModernButtonStyle}"
                            Padding="12,8"
                            Content="Options"
                            Click="OptionsMenu_Click">
                        <Button.ContextMenu>
                            <ContextMenu x:Name="OptionsContextMenu">
                                <MenuItem Header="Import CSV..." Click="ImportCsv_Click" />
                                <MenuItem Header="Export CSV..." Click="ExportCsv_Click" />
                                <Separator />
                                <MenuItem Header="View Audit Log" Command="{Binding ViewLogCommand}" />
                                <Separator />
                                <MenuItem x:Name="WinnerSoundEnabledMenuItem" 
                                          Header="Winner Sound Enabled" 
                                          IsCheckable="True"
                                          Click="WinnerSoundEnabled_Click" />
                                <MenuItem Header="Choose Custom Sound..." Click="ChooseCustomSound_Click" />
                                <MenuItem Header="Reset to Default Sound" Click="ResetDefaultSound_Click" />
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="SidebarColumn" Width="400" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Left Panel: List Management (Collapsible) -->
                <Border x:Name="SidebarPanel" Grid.Column="0" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="16" VerticalAlignment="Top">
                            <!-- Items Section Title -->
                            <TextBlock Text="Items" Style="{StaticResource HeadingStyle}" Margin="0,0,0,12" />

                            <!-- DataGrid for Items -->
                            <DataGrid x:Name="ItemsGrid"
                                      ItemsSource="{Binding CurrentList.Items}" 
                                      AutoGenerateColumns="False" 
                                      CanUserAddRows="False" 
                                      Height="350"
                                      EnableRowVirtualization="True" 
                                      HeadersVisibility="Column" 
                                      SelectionMode="Single"
                                      BorderBrush="{StaticResource BorderBrush}"
                                      BorderThickness="1"
                                      RowHeight="36"
                                      Margin="0,0,0,12"
                                      CellEditEnding="ItemsGrid_CellEditEnding">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
                                        <Setter Property="FontWeight" Value="Medium" />
                                        <Setter Property="Padding" Value="8" />
                                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
                                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#E3F2FD" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.RowStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                                    <DataGridTemplateColumn Header="Selected" Width="70">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding IsMarked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Click="MarkedCheckBox_Click" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Actions" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Remove" 
                                                        Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource ModernButtonStyle}"
                                                        Padding="8,4"
                                                        FontSize="12" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Add Single Item -->
                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="Add Item" Style="{StaticResource TitleStyle}" Margin="0,0,0,8" />
                                <TextBox x:Name="AddBox" 
                                         ToolTip="Enter item name and press Add"
                                         Padding="8,6"
                                         FontSize="14"
                                         Height="36"
                                         VerticalContentAlignment="Center"
                                         Margin="0,0,0,8" />
                                <Button x:Name="AddItemButton" Content="Add Item" 
                                        Click="AddItem_Click"
                                        Style="{StaticResource ModernButtonStyle}" />
                            </StackPanel>

                            <!-- Bulk Add -->
                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="Bulk Add" Style="{StaticResource TitleStyle}" Margin="0,0,0,8" />
                                <TextBox x:Name="BulkBox" 
                                         ToolTip="Paste comma, semicolon, or newline separated values"
                                         AcceptsReturn="True" 
                                         Height="80"
                                         TextWrapping="Wrap"
                                         Padding="8"
                                         Margin="0,0,0,8" />
                                <Button x:Name="BulkAddButton" Content="Add Multiple" 
                                        Click="BulkAdd_Click"
                                        Style="{StaticResource ModernButtonStyle}" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Sidebar Toggle Button -->
                <Button x:Name="SidebarToggleButton"
                        Grid.Column="1"
                        Content="&lt;"
                        Click="ToggleSidebar_Click"
                        ToolTip="Hide/Show sidebar"
                        Width="24"
                        Background="{StaticResource BackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,1,0"
                        Padding="0"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="{StaticResource TextSecondaryBrush}"
                        Cursor="Hand"
                        VerticalAlignment="Stretch" />

                <!-- Right Panel: Wheel -->
                <Grid Grid.Column="2" Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Wheel Container with clipping to prevent zoom overflow -->
                    <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" 
                            BorderBrush="{StaticResource BorderBrush}" 
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            ClipToBounds="True">
                        <Grid ClipToBounds="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Wheel Message (when no items) -->
                            <TextBlock x:Name="EmptyMessage" 
                                       Text="Add items to the list to start spinning!" 
                                       Grid.Row="0"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       Style="{StaticResource TitleStyle}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       TextAlignment="Center" />

                            <!-- Wheel Control - Dynamic sizing -->
                            <local:WheelControl x:Name="Wheel" 
                                                Grid.Row="0"
                                                HorizontalAlignment="Stretch" 
                                                VerticalAlignment="Stretch"
                                                ClipToBounds="True" />

                            <!-- Item Count Info -->
                            <TextBlock x:Name="ItemCountInfo"
                                       Grid.Row="1"
                                       Margin="0,8,0,0"
                                       HorizontalAlignment="Center"
                                       Style="{StaticResource TitleStyle}"
                                       Foreground="{StaticResource TextSecondaryBrush}" />
                        </Grid>
                    </Border>

                    <!-- Button Row -->
                    <StackPanel Grid.Row="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,16,0,0">
                        
                        <!-- Shuffle Button -->
                        <Button x:Name="ShuffleButton"
                                Content="Shuffle" 
                                Style="{StaticResource ModernButtonStyle}"
                                Padding="20,16"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Margin="0,0,16,0"
                                Width="120"
                                Cursor="Hand"
                                Click="ShuffleButton_Click" />
                        
                        <!-- Spin Button -->
                        <Button x:Name="SpinButton"
                                Content="SPIN" 
                                Style="{StaticResource AccentButtonStyle}"
                                Padding="24,16"
                                FontSize="18"
                                FontWeight="Bold"
                                Width="200"
                                Cursor="Hand"
                                Click="SpinButton_Click" />
                    </StackPanel>
                </Grid>
            </Grid>
        </DockPanel>
        
        <!-- Confetti Overlay - on top of everything -->
        <Canvas x:Name="ConfettiCanvas" IsHitTestVisible="False" Panel.ZIndex="1000"/>
    </Grid>
</Window>
